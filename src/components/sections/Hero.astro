---
// Hero.astro
import Section from "./Section.astro";
import { Image } from "astro:assets";
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/effect-creative';

// Import your specific images
import c1 from "../../assets/pics/feature-1.jpg";
import c2 from "../../assets/pics/feature-2.jpg";
import c3 from "../../assets/pics/feature-3.jpg";
import c4 from "../../assets/pics/feature-4.jpg";
---

<Section id="home">
    <div class="relative flex flex-col-reverse mt-10 items-center md:flex-row" id="hero">
      <div class="row items-center py-5 px-4 md:px-8 lg:px-12 md:w-6/12 md:pb-20 md:pt-10">
        <div class="text-left space-y-3">
          <h1 class="text-4xl font-medium leading-none md:text-6xl text-center md:text-left">ROUTES, RIDE, <br> RECORD, <br> REMINISCE</h1>
          <p class="mt-6 mb-8 text-2xl font-medium leading-7 sm:mb-12 text-center md:text-left md:pr-12">Your Ultimate Motorcycling Companion.</p>
          <p class="mt-6 mb-8 text-lg font-normal leading-7 sm:mb-12 text-center md:text-left md:pr-12">Experience effortless ride planning, dynamic group coordination, and the joy of reliving your adventuresâ€”RideSense simplifies every step of your motorcycle journey.</p>
          <div class="w-full justify-center md:justify-start items-center inline-flex">
            <a href="#" class="px-8 py-5 bg-[#1557E7] hover:bg-[#4178eb] active:bg-white active:text-[#1557E7] rounded-2xl text-center text-white border-[#1557E7] border transition-colors duration-300 text-xl font-normal leading-7">Start Your Journey Today - Join beta testing</a>
          </div>
        </div>
      </div>
      <div class="flex items-center w-full py-5 px-4 md:px-8 lg:px-12 md:w-6/12 md:pb-20 md:pt-10">
        <div class="swiper w-full">
          <div class="swiper-wrapper">
            <div class="swiper-slide">
              <Image src={c1} alt="Feature 1" class="w-full h-full object-cover rounded-lg shadow-lg" />
            </div>
            <div class="swiper-slide">
              <Image src={c2} alt="Feature 2" class="w-full h-full object-cover rounded-lg shadow-lg" />
            </div>
            <div class="swiper-slide">
              <Image src={c3} alt="Feature 3" class="w-full h-full object-cover rounded-lg shadow-lg" />
            </div>
            <div class="swiper-slide">
              <Image src={c4} alt="Feature 4" class="w-full h-full object-cover rounded-lg shadow-lg" />
            </div>
          </div>
          <div class="swiper-button-prev"></div>
          <div class="swiper-button-next"></div>
        </div>
      </div>
    </div>
</Section>

<script>
  import Swiper from 'swiper';
  import { Navigation, EffectCreative, Autoplay } from 'swiper/modules';

  new Swiper('.swiper', {
    modules: [Navigation, EffectCreative, Autoplay],
    slidesPerView: 1,
    loop: true,
    speed: 1000,
    autoplay: {
      delay: 5000,
      disableOnInteraction: false,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    effect: 'creative',
    creativeEffect: {
      prev: {
        shadow: true,
        translate: ['-20%', 0, -1],
        rotate: [0, 0, -3],
      },
      next: {
        shadow: true,
        translate: ['100%', 0, 0],
        rotate: [0, 0, 3],
      },
    },
    grabCursor: true,
  });
</script>

<style>
  .swiper {
    width: 100%;
    aspect-ratio: 4/3;
    max-height: 500px;
  }
  
  :root {
    --swiper-theme-color: #1557E7;
    --swiper-navigation-size: 25px;
  }
  
  .swiper-button-next,
  .swiper-button-prev {
    background-color: white;
    padding: 20px;
    border-radius: 50%;
    color: #1557E7 !important;
    transition: all 0.3s ease;
    opacity: 0;
  }

  .swiper:hover .swiper-button-next,
  .swiper:hover .swiper-button-prev {
    opacity: 1;
  }
  
  .swiper-button-next:hover,
  .swiper-button-prev:hover {
    background-color: #1557E7;
    color: white !important;
    transform: scale(1.1);
  }

  .swiper-slide {
    transition: all 0.3s ease;
  }

  .swiper-slide img {
    transition: transform 0.3s ease;
  }

  .swiper-slide-active img {
    transform: scale(1.02);
  }

  @media (max-width: 768px) {
    .swiper {
      aspect-ratio: 3/4;
      max-height: 400px;
    }
  }
</style>
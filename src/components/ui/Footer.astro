---
import Facebook from "../../assets/facebook.svg";
import Linkedin from "../../assets/linkedin.svg";
import Twitter from "../../assets/twitter.svg";
import PlayStore from "../../assets/playstore.svg";
import AppStore from "../../assets/appstore.svg";
import Logo from "../../../public/RideSenseLogo.png";
import { Image } from "astro:assets";

const socialLinks = [
  // { name: "Facebook", src: Facebook, link: "https://facebook.com" },
  {
    name: "Linkedin",
    src: Linkedin,
    link: "https://www.linkedin.com/company/ridesense/",
  },
  // { name: "Twitter", src: Twitter, link: "https://twitter.com" },
  { name: "Play Store", src: PlayStore, link: "https://play.google.com/store" },
  {
    name: "App Store",
    src: AppStore,
    link: "https://apps.apple.com/app/id6503331534",
  },
];

const navLinks = [
  { name: "Home", href: "#home" },
  { name: "Features", href: "#features" },
  { name: "FAQs", href: "/faqs" },
  // { name: "Contact", href: "#contact" },
];

const legalLinks = [
  { name: "Terms and Conditions", href: "/terms-and-conditions" },
  { name: "Privacy Policy", href: "/privacy-policy" },
  { name: "Request Account Deletion", href:"/request-account-deletion" },
];
---

<section class="sm:px-5">
  <div
    class="px-4 sm:px-[15px] bg-dark text-gray pt-8 sm:pt-[55px] lg:px-[60px] sm:rounded-t-[45px]"
  >
    <div>
      <!-- Header Section -->
      <div
        class="flex flex-col lg:flex-row items-center gap-8 lg:gap-7 lg:justify-between"
      >
        <!-- Logo -->
        <a href="#home" class="flex items-center gap-3">
          <img
            src={Logo.src}
            alt="RideSense Logo"
            class="h-12 sm:h-16 w-auto rounded-full p-1"
          />
          <span class="text-3xl sm:text-5xl text-white">RideSense</span>
        </a>

        <!-- Navigation Links -->
        <div class="flex flex-col items-center w-full lg:w-auto">
          {/* Main Navigation */}
          <ul class="flex flex-wrap justify-center gap-4 sm:gap-5 mb-4 w-full">
            {
              navLinks.map((link) => (
                <li>
                  <a
                    class="hover:text-green transition-colors text-sm sm:text-base block text-center py-1"
                    href={link.href}
                  >
                    {link.name}
                  </a>
                </li>
              ))
            }
          </ul>
          {/* Legal Links */}
          <ul class="flex flex-wrap justify-center gap-4 sm:gap-5 w-full">
            {
              legalLinks.map((link) => (
                <li>
                  <a
                    class="hover:text-green transition-colors text-sm sm:text-base block text-center py-1"
                    href={link.href}
                  >
                    {link.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- Social Media Icons -->
        <div class="flex gap-6 flex-wrap justify-center">
          {
            socialLinks.map((logo) => (
              <a
                href={logo.link}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:opacity-80 transition-opacity"
              >
                <a
                  href={logo.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:opacity-80 transition-opacity"
                >
                  <img
                    src={logo.src.src}
                    alt={logo.name}
                    class="w-8 h-8 sm:w-10 sm:h-10"
                  />
                </a>
              </a>
            ))
          }
        </div>
      </div>

      <!-- Footer Bottom Section -->
      <div class="pt-12">
        <!-- Contact Information -->
        <div class="flex flex-col items-center lg:items-start">
          <h3
            class="mb-5 text-center lg:text-left text-xl sm:text-2xl text-[#0066FF]"
          >
            Contact us
          </h3>
          <div
            class="flex flex-col text-center lg:text-left gap-4 text-sm sm:text-base"
          >
            <span>Email: help@ridesense.in</span>
            <span class="flex items-center gap-2">
              Reach us on WhatsApp
              <a
                href="https://wa.me/917975307375"
                class="inline-flex items-center"
              >
                <img
                  src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg"
                  alt="WhatsApp Logo"
                  width="24"
                  height="24"
                  class="align-middle"
                />
              </a>
              : +91 7975307375
            </span>
          </div>
        </div>
      </div>

      <!-- Copyright Section -->
      <div
        class="mt-12 p-2 border-t border-gray-700 flex flex-col sm:flex-row items-center justify-center gap-4"
      >
        <img
          src={Logo.src}
          alt="RideSense Logo"
          class="h-12 sm:h-16 w-auto rounded-full p-1"
        />
        <p class="text-xs sm:text-sm text-center">
          Copyright Â© 2024 RideSense - All Rights Reserved
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .text-green {
    color: #00d37f;
  }
</style>

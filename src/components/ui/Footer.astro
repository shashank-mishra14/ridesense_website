---
import { Image } from "astro:assets";
import Facebook from "../../assets/facebook.svg";
import Linkedin from "../../assets/linkedin.svg";
import Twitter from "../../assets/twitter.svg";
import PlayStore from "../../assets/playstore.svg";
import AppStore from "../../assets/appstore.svg";
import Logo from "../../../public/Logo.svg";

const socialLinks = [
  { name: "Facebook", src: Facebook, link: "https://facebook.com" },
  { name: "Linkedin", src: Linkedin, link: "https://linkedin.com" },
  { name: "Twitter", src: Twitter, link: "https://twitter.com" },
  { name: "Play Store", src: PlayStore, link: "https://play.google.com/store" },
  { name: "App Store", src: AppStore, link: "https://www.apple.com/app-store/" },
];

const navLinks = [
  { name: "Home", href: "#home" },
  { name: "Features", href: "#features" },
  { name: "FAQs", href: "/faqs" },
  { name: "Contact", href: "#contact" },
];

const legalLinks = [
  { name: "Terms and Conditions", href: "/tnc" },
  { name: "Privacy Policy", href: "/privacypolicy" },
];
---

<section class="sm:px-5">
    <div class="px-4 sm:px-[15px] bg-dark text-gray py-8 sm:py-[55px] lg:px-[60px] sm:rounded-t-[45px]">
      <div>
        <!-- Header Section -->
        <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-7 lg:justify-between">
          <!-- Logo -->
          <a href="#home" class="flex items-center gap-3">
            <Image src={Logo} alt="RideSense Logo" class="h-12 sm:h-16 w-auto" />
            <span class="text-3xl sm:text-5xl text-white">RideSense</span>
          </a>

          <!-- Navigation Links -->
          <div class="flex flex-col items-center w-full lg:w-auto">
            {/* Main Navigation */}
            <ul class="flex flex-wrap justify-center gap-4 sm:gap-5 mb-4 w-full">
              {navLinks.map((link) => (
                <li>
                  <a 
                    class="hover:text-green transition-colors text-sm sm:text-base block text-center py-1" 
                    href={link.href}
                  >
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
            {/* Legal Links */}
            <ul class="flex flex-wrap justify-center gap-4 sm:gap-5 w-full">
              {legalLinks.map((link) => (
                <li>
                  <a 
                    class="hover:text-green transition-colors text-sm sm:text-base block text-center py-1" 
                    href={link.href}
                  >
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Social Media Icons -->
          <div class="flex gap-6 flex-wrap justify-center">
            {socialLinks.map((logo) => (
              <a 
                href={logo.link} 
                target="_blank" 
                rel="noopener noreferrer"
                class="hover:opacity-80 transition-opacity"
              >
                <Image 
                  src={logo.src} 
                  alt={logo.name} 
                  class="w-5 h-5 sm:w-6 sm:h-6" 
                />
              </a>
            ))}
          </div>
        </div>

        <!-- Footer Bottom Section -->
        <div class="pt-12">
          <!-- Contact Information -->
          <div class="flex flex-col items-center lg:items-start">
            <h3 class="mb-5 text-center lg:text-left text-xl sm:text-2xl text-[#0066FF]">
              Contact us
            </h3>
            <div class="flex flex-col text-center lg:text-left gap-4 text-sm sm:text-base">
              <span>Email: help@ridesense.in</span>
              <span>Reach us on WhatsApp: +91 7975307375</span>
            </div>
          </div>
        </div>

        <!-- Copyright Section -->
        <div class="mt-12 pt-8 border-t border-gray-700 flex flex-col sm:flex-row items-center justify-center gap-4">
          <Image src={Logo} alt="RideSense Logo" class="h-12 sm:h-16 w-auto" />
          <p class="text-xs sm:text-sm text-center">Copyright Â© 2024 RideSense - All Rights Reserved</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .text-green {
    color: #00D37F;
  }
</style>
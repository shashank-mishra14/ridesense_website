---
import { Bell } from 'lucide-astro';

interface FeatureCardProps {
    title: string;
    description: string;
    icon: typeof Bell; // Icon type should match the imported Lucide icon
    details: string[];
    image?: string;
    imageAlt: string;
}

const { title, description, icon: Icon, details, image, imageAlt } = Astro.props as FeatureCardProps;
---

<div class="bg-gray-800 rounded-xl overflow-hidden hover:bg-gray-700 transition-all">
    {image && (
        <div class="w-full h-48 overflow-hidden">
            <img 
                src={image} 
                alt={imageAlt}
                class="w-full h-full object-cover transform hover:scale-105 transition-transform duration-500"
            />
        </div>
    )}
    <div class="p-8">
        <div class="flex items-center mb-6">
            <Icon class="w-8 h-8 text-blue-400 mr-4" /> {/* Use the icon dynamically */}
            <h3 class="text-2xl font-bold text-white font-['Satoshi']">{title}</h3>
        </div>
        <p class="text-gray-300 mb-6 font-['Nunito Sans']">{description}</p>
        <ul class="space-y-3">
            {details.map((detail, idx) => (
                <li data-key={idx} class="flex items-center text-gray-400 font-['Nunito Sans']">
                    <span class="w-1.5 h-1.5 bg-blue-400 rounded-full mr-3"></span>
                    {detail}
                </li>
            ))}
        </ul>
    </div>
</div>

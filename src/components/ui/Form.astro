---
import { Image } from "astro:assets";
---

<div
  class="flex flex-col justify-center items-center p-8 md:p-12 bg-[#F3F3F3] rounded-lg shadow-md w-full"
>
  <form id="contactForm" class="w-full space-y-6"
 action="https://api.mailmodo.com/api/v1/at/f/GIXumGsxPF/765b031a-2718-588f-be91-99f4d8be370c"
  method="POST">


    <div>
      <label for="name" class="block text-black mb-2 text-lg font-medium"
        >Name</label
      >
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Your Name"
        required
        class="w-full px-4 py-3 border border-gray-300 rounded-lg text-black focus:ring-2 focus:ring-[#1557E7] focus:outline-none"
      />
    </div>

    <div>
      <label for="email" class="block text-black mb-2 text-lg font-medium"
        >Email</label
      >
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Your Email"
        required
        class="w-full px-4 py-3 border border-gray-300 rounded-lg text-black focus:ring-2 focus:ring-[#1557E7] focus:outline-none"
      />
    </div>

    <div>
      <label for="phone" class="block text-black mb-2 text-lg font-medium"
        >Phone Number</label
      >
      <input
        type="number"
        id="phone"
        name="phone"
        placeholder="Your Phone Number"
        required
        class="w-full px-4 py-3 border border-gray-300 rounded-lg text-black focus:ring-2 focus:ring-[#1557E7] focus:outline-none"
      />
    </div>

    <div>
      <label for="message" class="block text-black mb-2 text-lg font-medium"
        >Message</label
      >
      <textarea
        id="message"
        name="message"
        placeholder="Request for deletion"
        required
        class="w-full px-4 py-3 border border-gray-300 rounded-lg text-black focus:ring-2 focus:ring-[#1557E7] focus:outline-none"
        rows="5"></textarea>
    </div>
    <div>
      <label for="message" class="block text-black mb-2 text-lg font-medium"
        >Other Notes</label
      >
      <textarea
        id="message"
        name="message"
        placeholder=""
        required
        class="w-full px-4 py-3 border border-gray-300 rounded-lg text-black focus:ring-2 focus:ring-[#1557E7] focus:outline-none"
        rows="5"></textarea>
    </div>

    <button
      type="submit"
      name="submit"
      class="w-full bg-[#1557E7] text-white py-3 rounded-lg text-lg font-medium hover:bg-[#4178eb] transition-colors duration-300"
    >
      Send
    </button>
  </form>
</div>

<style>
  .form-checkbox {
    appearance: none;
    width: 24px;
    height: 24px;
    border: 2px solid #000;
    border-radius: 50%;
    outline: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .form-checkbox:before {
    content: "";
    width: 60%;
    height: 60%;
    border-radius: 50%;
    background: #1557e7;
    transform: scale(0);
    transition: transform 0.2s ease-in-out;
  }

  .form-checkbox:checked:before {
    transform: scale(1);
  }
</style>
